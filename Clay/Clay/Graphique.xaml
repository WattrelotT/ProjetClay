<Window x:Class="Clay.Graphique"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:charting="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
    Title="WPF Toolkit DataGrid &amp; Chart" Height="800" Width="1200">
    <DockPanel LastChildFill="True">
        <charting:Chart DockPanel.Dock="Bottom">
            <!--<charting:ScatterSeries
                    ItemsSource="{Binding Path=Data1}"
                    IndependentValuePath="Quality"
                    DependentValuePath="Lot"/>-->
            <charting:BarSeries
                ItemsSource="{Binding Path=Data1}"
                IndependentValueBinding="{Binding Quality}"
                DependentValueBinding="{Binding Lot}"
                
            />
                    
        </charting:Chart>
    </DockPanel>
</Window>